server {
  listen   80;
  server_name  <%= @server_name %>;

  access_log  <%= node['nginx']['acces_logs'] %>;

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_buffers 16 4k;
    proxy_buffer_size 2k;
    proxy_pass http://localhost:<%= @app_port %>;
  }
}
